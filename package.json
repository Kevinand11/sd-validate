{
  "name": "@stranerd/ss-validate",
  "version": "1.0.0",
  "description": "This package contains generic validation logic used across our stack of applications",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build && tsc --build",
    "lint": "eslint src/** --fix",
    "test": "jest"
  },
  "keywords": [],
  "author": "Kevin Izuchukwu",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.7.2",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "lib"
  ],
  "jest": {
    "roots": [
      "./"
    ],
    "testMatch": [
      "**/tests/**/*.[jt]s?(x)",
      "**/tests/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "transform": {
      "^.+\\.ts(x)?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
